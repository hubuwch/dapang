.searchLetter{
    position: fixed;
    right: 0;
    width: 40px;
    height: 100%;
    text-align: center;
    justify-content: center;
    display: flex;
    flex-direction: column;
    color: #666;
    z-index: 1;
    font-size: 25rpx;
    font-family: 'Times New Roman', Times, serif;
}
.searchLetter view{
    height: 50rpx;
}
